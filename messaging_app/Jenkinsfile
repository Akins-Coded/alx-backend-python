pipeline {
    agent any

    environment {
        DOCKER_HUB_REPO = "akinscoded/messaging_app"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Akins-Coded/alx-backend-python.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh '''
                    echo "ðŸš€ Building Docker image..."
                    docker build -t ${DOCKER_HUB_REPO}:${BUILD_NUMBER} .
                '''
            }
        }

        stage('Login to DockerHub') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub-credentials',
                                                 usernameVariable: 'DOCKER_USER',
                                                 passwordVariable: 'DOCKER_PASS')]) {
                    sh '''
                        echo "ðŸ”‘ Logging into DockerHub..."
                        echo "$DOCKER_PASS" | docker login -u "$DOCKER_USER" --password-stdin
                    '''
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                sh '''
                    echo "ðŸ“¦ Pushing Docker image with tag ${BUILD_NUMBER}..."
                    docker push ${DOCKER_HUB_REPO}:${BUILD_NUMBER}

                    echo "ðŸ“¦ Tagging and pushing latest..."
                    docker tag ${DOCKER_HUB_REPO}:${BUILD_NUMBER} ${DOCKER_HUB_REPO}:latest
                    docker push ${DOCKER_HUB_REPO}:latest
                '''
            }
        }
    }

    post {
        always {
            sh 'docker logout'
            cleanWs()
        }
    }
}
